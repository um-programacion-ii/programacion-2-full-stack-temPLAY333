set -e

MVNW_JAR=".mvn/wrapper/maven-wrapper.jar"
WRAPPER_URL="${MAVEN_WRAPPER_JAR_URL:-https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.3.2/maven-wrapper-3.3.2.jar}"

if [ ! -f "$MVNW_JAR" ]; then
  echo "Downloading Maven Wrapper jar from $WRAPPER_URL"
  mkdir -p .mvn/wrapper
  curl -fsSL "$WRAPPER_URL" -o "$MVNW_JAR"
fi

JAVA_EXE="java"
if [ -n "$JAVA_HOME" ]; then
  JAVA_EXE="$JAVA_HOME/bin/java"
fi

exec "$JAVA_EXE" $MAVEN_OPTS -classpath "$MVNW_JAR" org.apache.maven.wrapper.MavenWrapperMain "$@"

